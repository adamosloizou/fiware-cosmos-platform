<?xml version="1.0"?>
<project
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
    xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>
    <properties>
        <copyright.year>2012</copyright.year>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <org.apache.hadoop>0.20.2</org.apache.hadoop>
        <org.apache.hadoop.hive>0.7.1</org.apache.hadoop.hive>
        <jvm.version>1.6</jvm.version>
        <maven.build.timestamp.format>yyyyMMdd-HHmm</maven.build.timestamp.format>
    </properties> 
    <profiles>
        <profile>
            <id>local</id>
            <properties>      
        	    <env.SVN_REVISION>Build</env.SVN_REVISION>
        	    <env.ProductVersion>Local</env.ProductVersion>   
            </properties>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
        </profile>
        <profile>
            <id>jenkins</id>
        </profile>
    </profiles>
    <parent>
        <artifactId>webprofiling</artifactId>
        <groupId>es.tid.ps</groupId>
        <version>${env.ProductVersion}${env.SVN_REVISION}</version>
    </parent>
    <artifactId>kpicalculation</artifactId>
    <name>kpicalculation</name>
    <url>http://maven.apache.org</url>
    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.0</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>1.4</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <transformers>
                                <transformer
                                    implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                                    <mainClass>es.tid.ps.kpicalculation.KpiMain</mainClass>
                                </transformer>
                            </transformers>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
        <resources>
            <resource>
                <directory>src/main/resources/conf</directory>
            </resource>
            <resource>
                <directory>src/test/resources/conf</directory>
            </resource>
        </resources>
    </build>
</project>