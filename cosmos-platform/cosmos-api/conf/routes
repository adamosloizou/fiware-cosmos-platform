# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                               es.tid.cosmos.api.ProductionApplication.index

# API
GET     /cosmos                         es.tid.cosmos.api.ProductionApplication.version()
GET     /cosmos/cluster                 es.tid.cosmos.api.ProductionApplication.list()
POST    /cosmos/cluster                 es.tid.cosmos.api.ProductionApplication.createCluster()
GET     /cosmos/cluster/:id             es.tid.cosmos.api.ProductionApplication.listDetails(id)
POST    /cosmos/cluster/:id/terminate   es.tid.cosmos.api.ProductionApplication.terminate(id)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                   controllers.Assets.at(path="/public", file)
