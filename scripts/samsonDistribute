localMachine=$(uname -n)
if [ "$localMachine" != "samson01" ]
then
	echo "Will only distribute from 'samson01'" 
	exit 1
fi

for mach in samson02 samson03 samson04 samson05 samson06 samson08
do
	echo Installing samson in $mach
	rsync -r /opt/samson          samson@$mach:/opt/
	rsync -r /usr/local/bin       samson@$mach:/usr/local/
done
