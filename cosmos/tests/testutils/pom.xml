
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
  
    <parent>
        <groupId>es.tid.cosmos</groupId>
        <artifactId>tests</artifactId>
        <version>0.4.0.0-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <groupId>es.tid.cosmos</groupId>
    <artifactId>testutils</artifactId>
    <packaging>jar</packaging>

    <name>testutils</name>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>3.8.1</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.seleniumhq.selenium</groupId>
            <artifactId>selenium</artifactId>
            <version>2.0b1</version>
        </dependency>
        <dependency>
            <groupId>es.tid.cosmos.hadoopjobs</groupId>
            <artifactId>printprimes</artifactId>
            <version>0.4.0.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>es.tid.cosmos.hadoopjobs</groupId>
            <artifactId>mapperfail</artifactId>
            <version>0.4.0.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>wordcount-core</artifactId>
            <version>${project.version}</version>
        </dependency>
    </dependencies>
    
    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
        <plugins>
            <plugin> 
                <groupId>org.apache.maven.plugins</groupId> 
                <artifactId>maven-assembly-plugin</artifactId> 
                <version>2.2</version> 
                <executions> 
                    <execution> 
                        <id>aggregate</id> 
                        <phase>package</phase> 
                        <goals> 
                            <goal>single</goal> 
                        </goals> 
                        <configuration> 
                            <descriptor>assembly.xml</descriptor> 
                        </configuration> 
                    </execution> 
                </executions> 
                <configuration> 
                    <attach>false</attach> 
                    <finalName>.</finalName>
                    <appendAssemblyId>false</appendAssemblyId> 
                </configuration> 
            </plugin> 
        </plugins>
    </build>
</project>
