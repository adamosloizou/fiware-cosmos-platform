<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <appender name="bdp" class="org.apache.log4j.RollingFileAppender">
        <param name="File" value="/var/log/bdp/sftpclient/bdp-sftp_client.log" />
        <param name="MaxBackupIndex" value="10" />
        <param name="MaxFileSize" value="1000000" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern"
                value="%d{dd MMM yyyy HH:mm:ss,SSS} %-5p %C{1} | %m%n" />
        </layout>
    </appender>
    
    <!-- bdp logger -->
    <logger name="es.tid.bdp">
        <level value="DEBUG" />
    </logger>

	<!-- Default logger -->
	<root>
		<level value="DEBUG" />
		<appender-ref ref="bdp" />
	</root>
</log4j:configuration>