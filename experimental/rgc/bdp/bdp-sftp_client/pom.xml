<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>bdp</artifactId>
		<groupId>es.tid.bdp</groupId>
		<version>0.0.1</version>
		<relativePath>..</relativePath>
	</parent>
	<artifactId>bdp-sftp_client</artifactId>
	<name>Big Data Platform - Sftp client</name>
	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>rpm-maven-plugin</artifactId>
				<version>2.1-alpha-1</version>
				<executions>
					<execution>
						<id>package</id>
						<phase>package</phase>
						<goals>
							<goal>rpm</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<copyright>${copyright.year}, XXXXXXX</copyright>
					<distribution></distribution>
					<group>Application/Collectors</group>
					<packager>XXXXXXX</packager>
					<prefix>/usr/local/bdp/sftpclient</prefix>
					<changelogFile>src/changelog</changelogFile>
					<needarch>noarch</needarch>
					<targetOS>Linux</targetOS>
					<defineStatements>
						<defineStatement>_unpackaged_files_terminate_build 0</defineStatement>
					</defineStatements>
					<mappings>
						<mapping>
							<directory>/usr/local/bdp/sftpclient/run</directory>
							<filemode>750</filemode>
							<username>hdfs</username>
							<groupname>hadoop</groupname>
							<sources>
								<source>
									<location>src/main/scripts/bdp_sftp_client.sh</location>
								</source>
							</sources>
						</mapping>
						<mapping>
							<directory>/usr/local/bdp/sftpclient/lib</directory>
							<filemode>750</filemode>
							<username>hdfs</username>
							<groupname>hadoop</groupname>
							<sources>
								<source>
									<location>target/${project.artifactId}-${project.version}.jar</location>
								</source>
							</sources>
							<dependency>
								<includes>
									<include>com.jcraft:jsch</include>
								</includes>
							</dependency>
						</mapping>
						<mapping>
							<directory>/usr/local/bdp/sftpclient/actions</directory>
							<filemode>750</filemode>
							<username>dumper</username>
							<groupname>dumpgroup</groupname>
						</mapping>
					</mappings>
					<preinstallScriptlet>
						<script>echo "installing now"</script>
					</preinstallScriptlet>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>org.codehaus.mojo</groupId>
			<artifactId>rpm-maven-plugin</artifactId>
			<version>2.1-alpha-1</version>
		</dependency>
		<dependency>
			<groupId>es.tid.bdp</groupId>
			<artifactId>bdp-utils</artifactId>
			<version>0.0.1</version>
		</dependency>
		<dependency>
			<groupId>com.jcraft</groupId>
			<artifactId>jsch</artifactId>
			<version>0.1.46</version>
		</dependency>
		<dependency>
			<groupId>org.apache.hadoop</groupId>
			<artifactId>hadoop-core</artifactId>
			<version>${org.apache.hadoop}</version>
		</dependency>
		<dependency>
			<groupId>com.hadoop.compression</groupId>
			<artifactId>hadoop-gpl-compression</artifactId>
			<version>0.1.0</version>
		</dependency>
	</dependencies>
	<properties>
		<copyright.year>2011</copyright.year>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		<org.apache.hadoop>0.20.2-cdh3u2</org.apache.hadoop>
	</properties>
</project>