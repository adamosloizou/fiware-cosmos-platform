<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>bdp</artifactId>
		<groupId>es.tid.bdp</groupId>
		<version>0.0.1</version>
		<relativePath>..</relativePath>
	</parent>
	<artifactId>bdp-sftp_server</artifactId>
	<name>Big Data Platform - sftp server</name>
		<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>rpm-maven-plugin</artifactId>
				<version>2.1-alpha-1</version>
				<executions>
					<execution>
						<id>package</id>
						<phase>package</phase>
						<goals>
							<goal>rpm</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<copyright>${copyright.year}, XXXXXXX</copyright>
					<distribution></distribution>
					<group>Application/Collectors</group>
					<packager>XXXXXXX</packager>
					<prefix>/usr/local/bdp/sftpserver</prefix>
					<changelogFile>src/changelog</changelogFile>
					<needarch>noarch</needarch>
					<targetOS>Linux</targetOS>
					<defineStatements>
						<defineStatement>_unpackaged_files_terminate_build 0</defineStatement>
					</defineStatements>
					<!-- <requires> <require>bdp-utils &ge; 0.0.1</require> </requires> -->
					<mappings>
						<mapping>
							<directory>/usr/local/bdp/sftpserver/run</directory>
							<filemode>750</filemode>
							<username>hdfs</username>
							<groupname>hadoop</groupname>
							<sources>
								<source>
									<location>src/main/scripts/bdp_sftp_server.sh</location>
								</source>
							</sources>
						</mapping>
						<mapping>
							<directory>/usr/local/bdp/sftpserver/lib</directory>
							<filemode>750</filemode>
							<username>hdfs</username>
							<groupname>hadoop</groupname>
							<sources>
								<source>
									<location>target/${project.artifactId}-${project.version}.jar</location>
								</source>
							</sources>
							<dependency>
								<includes>
									<include>org.apache.sshd:ssdh-core</include>
									<include>org.apache.mina:mina-core</include>
								</includes>
							</dependency>
						</mapping>
						<mapping>
							<directory>/usr/local/bdp/sftpserver/conf</directory>
							<filemode>750</filemode>
							<username>hdfs</username>
							<groupname>hadoop</groupname>
							<sources>
								<source>
									<location>src/main/resources/log4j.xml</location>
								</source>
							</sources>
						</mapping>
						<mapping>
							<directory>/var/log/bdp/sftpserver</directory>
							<filemode>750</filemode>
							<username>hdfs</username>
							<groupname>hadoop</groupname>
						</mapping>
					</mappings>
					<preinstallScriptlet>
						<script>echo "installing now"</script>
					</preinstallScriptlet>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>org.apache.hadoop</groupId>
			<artifactId>hadoop-core</artifactId>
			<version>0.20.2-cdh3u2</version>
		</dependency>
		<dependency>
			<groupId>org.apache.sshd</groupId>
			<artifactId>sshd-core</artifactId>
			<version>0.6.0</version>
		</dependency>
	</dependencies>
</project>