"global" {
    "properties" {
        "clientPort": ${ZookeeperPort},
        "initLimit": "10",
        "tickTime": "2000",
        "syncLimit": "5",
        "zk_data_dir": "/hadoop/zookeeper",
        "zk_log_dir": "/var/log/zookeeper",
        "zk_pid_dir": "/var/run/zookeeper",
        "zk_pid_file": "/var/run/zookeeper/zookeeper_server.pid",
        "zk_user": "zookeeper"
    }
}
