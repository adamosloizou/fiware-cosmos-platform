mkdir -p libs_eclipse_proj
cd libs_eclipse_proj 2> /dev/null
if [ "$?" != 0 ]
then
	echo "You need be on trunk to build"
	exit 1
fi

export PATH=/usr/local/bin:$PATH
cmake ../libs -DCMAKE_BUILD_TYPE=DEBUG -G "Eclipse CDT4 - Unix Makefiles"

cd ..
mkdir -p apps_eclipse_proj
cd apps_eclipse_proj 2> /dev/null
if [ "$?" != 0 ]
then
	echo "You need be on trunk to build"
	exit 1
fi

export PATH=/usr/local/bin:$PATH
cmake ../apps -DCMAKE_BUILD_TYPE=DEBUG -G "Eclipse CDT4 - Unix Makefiles"
