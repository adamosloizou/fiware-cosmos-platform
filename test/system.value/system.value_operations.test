--NAME--
system.value operations - Simple operations with system.value data-type
--DELILAH-INIT--
remove_all_stream
push quijote.txt input
flush_buffers
run system.parse input lines
flush_buffers
run system.map lines words env:command " parse_words |  emit "
flush_buffers
run system.map words lengths env:command " select  strlen(key) , 1 | emit "
flush_buffers
run system.reduce lengths lengths_total env:command sum
flush_buffers
pop lengths_total lengths_total -force
--SHELL--
samsonCat lengths_total | sort -n
